{
  "manifest_version": 3,
  "name": "Calorie Calculator",
  "version": "1.0",
  "description": "Calculate calorie intake based on food input.",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
